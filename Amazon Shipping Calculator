<!DOCTYPE html>
<html>
  <head>
    <title>Amazon Shipping Calculator</title>
    <style>
      body {
        background-color: white;
      }
    </style>
  </head>
  <body>
    <p>Youtube Subscribe Button</p>
    <button id = 'subscribe-button' onclick = "
      subscribe();
    ">Subscribe</button>
    <p>Amazon Shipping Calculator</p>
    <p>Orders undder $40 = +$10 shipping</p>
    <p>Orders over $40 = FREE shipping</p>
    <input placeholder = 'Cost of order' id = 'cost-input' onkeydown = "
      if (event.key === 'Enter'){
          calculateTotal();
        }
    ">
    <button onclick = "
      calculateTotal();
    ">Calculate</button>
    <p id = 'result'></p>
    <script>
      function calculateTotal(){
        const inputElement = document.getElementById('cost-input');
        let cost = Number(inputElement.value);
        if (cost < 40){
          cost += 10;
        }
        document.getElementById('result').innerHTML = `$${truncate2DecimalPlaces(cost)}`;
      }

      function truncate2DecimalPlaces(num){
        return Math.trunc(num * 100) / 100;
      }

      function subscribe(){
        if (document.getElementById('subscribe-button').innerHTML === 'Subscribe'){
          document.getElementById('subscribe-button').innerHTML = 'Subscribed';
        } else {
          document.getElementById('subscribe-button').innerHTML = 'Subscribe';
        }
      } 
    </script>
  </body>
</html>
