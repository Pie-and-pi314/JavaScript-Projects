    <div class='button-container'>
      <div class="button-wrapper">
        <button 
          class='button'
          id='edgar'
          onclick="
            toggleButton('edgar');
            updateColor();
          "
        >
          fun
        </button>
        <p 
          id='edgar-description'
        >
          abandoned
        </p>
      </div>
      <div class="button-wrapper">
        <button 
          class='button'
          id='grade'
          onclick="
            toggleButton('grade');
            updateColor();
          "
          >
          grade
        </button>
        <p 
          id='grade-description'
        >
          abandoned
        </p>
      </div>
      <div class="button-wrapper">
        <button 
