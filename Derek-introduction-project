  <head><title>George Introduction</title>
    <style>
      body {
        background-color: white;
      }
      .button {
        height: 100px;
        width: 125px;
        border: none;
        border-radius: 30px;
        background-color: #000;
        color: white;
        font-size: 20px;
        margin-right: 25px;
        cursor: pointer;
      }
      .isClicked {
        background-color: rgb(240,240,240);
        color: black;
      }
    </style>
  </head>
  <body>
    <h1>
      Derek belike:
    </h1>
    <button 
      class='button isClicked'
      id='edgar'
      onclick="
        click('edgar');
        setColor('edgar');
      "
    >
      fun
    </button>
    <button 
      class='button'
      id='grade'
      onclick="
        click('grade');
        setColor('grade');
      "
     >
      grade
    </button>
    <button 
      class='button'
      id='brain'
      onclick="
        click('brain');
        setColor('brain');
      "
     >
      family
    </button>
    <script>
      let grayButtons = [];
      /*Add the button's id to the list. If the amount
      of elements exceeds 2, the oldest element
      will be removed.
      */
      function click(buttonId){
        const maxLength = 2;
        if (grayButtons.includes(buttonId)){
          grayButtons = grayButtons.filter(grayButtons => grayButtons !== buttonId);
        } else {
          if (grayButtons.length < maxLength){
            grayButtons.push(buttonId);
          } else {
            grayButtons.shift();
            grayButtons.push(buttonId);
          }
        }
      }
      /*If a button's id is in the array grayButtons,
      it'll be added to the 'isClick' class, which
      makes it gray (selected).
      */
      function setColor(buttonId){
        const element = document.getElementById(buttonId);
        if (grayButtons.includes(buttonId)){
          element.classList.add('isClicked');
        } else {
          element.classList.remove('isClicked');
        }
      }
    </script>
  </body>
</html>
